<!-- specific user favorite show page -->
<div class="row">

  <div class="col-md-3 sidebar">
    <div class="profile">
      <%= image_tag(@user.avatar_url, class: "userAvatar") %>
    </div>
    <div class="info">
      <h3> <%= @user.soundcloud_username %> </h3>
      <% if @sc_user.country.blank? || @sc_user.city.blank? %>
      <h4> <%= @sc_user.city %> <%= @sc_user.country %> </h4>
      <% else %>
      <h4> <%= @sc_user.city %>, <%= @sc_user.country %> </h4>
      <% end %>
      <h4> <%= @sc_user.followers_count %> Followers </h4>
      <!-- <p> <%= @sc_user.description %> </p> -->
    </div>

  </div>

  <div class="col-md-9">
    <header>
      <h3> <%= @user.soundcloud_username %>'s Favorite Tracks</h3>
    </header>
    <div class="favorites">
      <% @user.tracks.sample(20).each do |track| %>
      <section class="stream">
        <%= render partial: "shared/track", object: track %>
      </section>
        <% end %>
    </div>
  </div>
</div>
