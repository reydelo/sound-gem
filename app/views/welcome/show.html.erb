<div class="infos">
  <div class="details">
    <ul>
      <li>Username: <%= @me.username %></li>
      <li>Fullname: <%= @me.full_name %></li>
      <li>Location: <%= @me.city %>, <%= @me.country %></li>
    </ul>
  </div>
  <%= image_tag(@me.avatar_url, :class => "avatar") %>

</div>

<b>Your Friends' Likes</b>

<div class="friends">
    <% @friends.each do |x| %>
    <% current_user.soundcloud_client.get("/users/#{x.id}/favorites", :limit => 1).each do |track| %>
    <iframe id="soundcloud_widget"
          src="http://w.soundcloud.com/player/?url=https://api.soundcloud.com/tracks/<%=track.id%>&show_artwork=true&liking=true&sharing=true&auto_play=false"
          width="900"
          height="150"
          frameborder="no"></iframe>
    <% end %>
    <% end %>
</div>
